.addContainer{
  width: 700rpx;
  margin: 20rpx 25rpx 0 25rpx;
}
.item{
  width: 100%;
  border-bottom: 1rpx solid #bbb;
  font-size: 30rpx;
  height: 90rpx;
  line-height: 90rpx
}
.item label{
  float: left;
  width: 160rpx;
  margin-right: 20rpx;
}
.district{
  float: left;
  width: 480rpx;
  height: 80rpx;
  margin-right: 10rpx;
  text-align: right;
  display: block;  
  overflow: hidden;  
  white-space: nowrap;  
  text-overflow: ellipsis;
}
.item image{
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin: 25rpx 0;
}
.item  switch{
  float: right;
}

.picker-view {
 width: 100%;
 display: flex;
 z-index:12;
 background-color: #fff;
 flex-direction: column;
 justify-content: center;
 align-items: center;
 position: fixed;
 bottom: 0rpx;
 left: 0rpx;
 height: 40vh;
}

.picker-item {
 line-height: 70rpx;
 margin-left: 5rpx;
 margin-right: 5rpx;
 text-align: center;
}

.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 8;
  background: rgba(0, 0, 0, 0.3);
}

.submitBtn{
  width: 100%;
  height: 95rpx;
  line-height: 95rpx;
  text-align: center;
  position: fixed;
  bottom: 0;
  color: #fff;
  background-color: #ff0033;
}