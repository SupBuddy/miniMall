page{ 
 display: flex; 
 flex-direction: column; 
 height: 100%;
 background-color: #f4f4f4; 
} 
.navbar{ 
 flex: none; 
 display: flex; 
 background: #fff; 
 font-size: 30rpx;
} 
.navbar .item{ 
 position: relative; 
 flex: auto; 
 text-align: center; 
 line-height: 80rpx; 
} 
.navbar .item.active{ 
 color: #ff0090; 
} 
.navbar .item.active:after{ 
 content: ""; 
 display: block; 
 position: absolute; 
 bottom: 0; 
 left: 0; 
 right: 0; 
 height: 4rpx; 
 background: #ff0090; 
} 

.order{
  margin-top: 20rpx;
  background-color: #fff;
  width: 100%;
}
.title{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  color: #999;
  width: 700rpx;
  margin: 0 auto;
  border-bottom: 1rpx solid #999;
}
.paymentStatus{
  float: right;
}
.orderItem{
  width: 700rpx;
  height: 200rpx;
  margin: 0 auto;
  background-color: #fff;
  border-bottom: 1rpx solid #999;
}
.productImg{
  width: 180rpx;
  height: 180rpx;
  margin: 10rpx 10rpx 10rpx 0;
  float: left;
}
.purchaseDetails{
  width: 510rpx;
  height: 200rpx;
  float: left;
}
.productName{
  font-size: 26rpx;
  line-height: 30rpx;
  height: 60rpx;
  width: 350rpx;
  overflow: hidden;
  padding: 20rpx 0 0 20rpx;
  float: left; 
}
.productPrice{
  font-size: 26rpx;
  line-height: 30rpx;
  height: 60rpx;
  width: 120rpx;
  padding: 20rpx 0 0 20rpx;
  text-align: right;
  float: left;
  overflow: hidden;
}
.productDescription{
  font-size: 24rpx;
  color: #a9a9a9;
  width: 350rpx;
  height: 25rpx;
  line-height: 25rpx;
  padding: 20rpx 0 0 20rpx;
  float: left;
}
.quantity{
  font-size: 24rpx;
  color: #a9a9a9;
  width: 120rpx;
  height: 25rpx;
  line-height: 25rpx;
  padding: 20rpx 0 0 20rpx;
  float: left;
  text-align: right;
}
.orderStatus{
  float: right;
  color: #ff0090;
}
.sum{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  width: 700rpx;
  margin: 0 auto;
}
.totalPrice{
  float: right;
}